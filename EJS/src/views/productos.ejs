<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <title>Vista de Productos</title>
    <meta name="description" content="Vista de productos">
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

<body>

    <div>

            <div>
                <a href="/">Formulario</a>
                <a href="/productos">Vista de Productos</a>
            </div>

            <div>

                <div>

                    <h4>Vista de Productos:</h4>

                        <% if(productos.length < 1){ %>

                            <h5>No se encontraron productos.</h5>

                            <% } else { %>

                                <table>

                                    <thead>

                                        <tr>
                                            <th>Nombre:</th>
                                            <th>Precio:</th>
                                            <th>Foto:</th>
                                        </tr>

                                    </thead>

                                    <tbody>

                                            <% productos.forEach(function(producto){ %>
                                                <tr>
                                                    <td>
                                                        <%=producto.title%>
                                                    </td>
                                                    <td> $ <%=producto.price%>
                                                    </td>
                                                    <td> <img src="<%=producto.thumbnail%>"> </td>
                                                </tr>
                                                <% }) %>
                                    </tbody>
                                </table>
                                <% } %>
                </div>
            </div>
    </div>
</body>

</html>